{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "src/assets/**/*"
    ]
  },
  "rules": {
    "member-access": false,
    "semicolon": false,
    "object-literal-sort-keys": false,
    "interface-name": [true, "never-prefix"],
    "ordered-imports": false,
    "no-console": false,
    "no-bitwise": false
  },
  "include": [
    "src/**/*"
  ]
}
